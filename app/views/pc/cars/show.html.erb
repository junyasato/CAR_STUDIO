<div class="car-wrapp">
  <div class="car-top-area">
    <h2><%= @cars.maker.name %></h2>
    <div class="car-top-area-info">
      <%= image_tag @cars.image %>
      <div class="car-top-area-info-right">
        <ul class="car-top-area-info-price">
          <li>
            <p>本体価格</p>
            <p class="car-top-area-info-price-big"><%= @cars.base_price %>万円</p>
          </li>
          <li>
            <p>支払総額</p>
            <p class="car-top-area-info-price-big"><%= @cars.total_price %>万円</p>
          </li>
        </ul>
        <ul class="car-top-area-fine-info">
          <li>
            <p>年式</p>
            <p class="car-top-area-fine-info-big"><%= @cars.model_year %></p>
          </li>
          <li>
            <p>走行距離</p>
            <p class="car-top-area-fine-info-big"><%= @cars.mileage %>万km</p>
          </li>
          <li>
            <p>車検有無</p>
            <p class="car-top-area-fine-info-big"><%= @cars.vehicle_inspection.strftime('%Y年%m月%d日') %></p>
          </li>
          <li>
            <p>修理歴</p>
            <p class="car-top-area-fine-info-big"><%= @cars.repaired %></p>
          </li>
          <li>
            <p>地域</p>
            <p class="car-top-area-fine-info-big"><%= @cars.model_year %></p>
          </li>
        </ul>
        <%= link_to "在庫確認・見積依頼" %>
      </div>
    </div>
  </div>
  <div class="car-main-area">
    <div class="car-main-area-contents">
      <h2>状態</h2>
      <table>
        <tr>
          <th>年式(初度登録年)</th>
          <td><%= @cars.conditions[0].model_year %></td>
          <th>ワンオーナー</th>
          <td><%= "◯" if @cars.conditions[0].one_owner == 1 %></td>
        </tr>
        <tr>
          <th>走行距離</th>
          <td><%= "◯" if @cars.conditions[0].mileage == 1 %></td>
          <th>キャンピングカー</th>
          <td><%= "◯" if @cars.conditions[0].camper == 1 %></td>
        </tr>
        <tr>
          <th>修復歴</th>
          <td><%= "◯"if @cars.conditions[0].repaired == 1 %></td>
          <th>福祉車両</th>
          <td><%= "◯" if @cars.conditions[0].welfare == 1 %></td>
        </tr>
        <tr>
          <th>定期点検記録簿</th>
          <td><%= "◯" if @cars.conditions[0].periodic_Inspection_record_book == 1 %></td>
          <th>新車物件</th>
          <td><%= "◯" if @cars.conditions[0].new_property == 1 %></td>
        </tr>
        <tr>
          <th>禁煙車</th>
          <td><%= "◯" if @cars.conditions[0].non_smoking == 1 %></td>
          <th>正規輸入車</th>
          <td><%= "◯" if @cars.conditions[0].regular_imported == 1 %></td>
        </tr>
        <tr>
          <th>リサイクル料</th>
          <td><%= @cars.conditions[0].recycling_fee %></td>
          <th>登録済 未使用車</th>
          <td><%= "◯" if @cars.conditions[0].registered_unused == 1 %></td>
        </tr>
        <tr>
          <th>エコカー減税対象車</th>
          <td><%= "◯" if @cars.conditions[0].eco_car == 1 %></td>
          <th>車検</th>
          <td><%= @cars.conditions[0].inspection %></td>
        </tr>
        <tr>
          <th>法定整備</th>
          <td><%= simple_format(h(@cars.conditions[0].statutory_maintenance)) %></td>
          <th>保証</th>
          <td><%= simple_format(h(@cars.conditions[0].security)) %></td>
        </tr>
      </table>

      <h2>基本スペック</h2>
      <table>
        <tr>
          <th>ボディタイプ</th>
          <td><%= @cars.specs[0].body_type %></td>
          <th>駆動方式</th>
          <td><%= @cars.specs[0].drive_system %></td>
        </tr>
        <tr>
          <th>色</th>
          <td><%= @cars.specs[0].color %></td>
          <th>ハンドル</th>
          <td><%= @cars.specs[0].handle %></td>
        </tr>
        <tr>
          <th>車台末尾番号</th>
          <td><%= @cars.specs[0].last_number %></td>
          <th>ミッション</th>
          <td><%= @cars.specs[0].mission %></td>
        </tr>
        <tr>
          <th>排気量</th>
          <td><%= @cars.specs[0].displacement %>cc</td>
          <th>乗車定員</th>
          <td><%= @cars.specs[0].passenger_capacity %>名</td>
        </tr>
        <tr>
          <th>エンジン種別</th>
          <td><%= @cars.specs[0].engine_type %></td>
          <th>ドア数</th>
          <td><%= @cars.specs[0].door %></td>
        </tr>
      </table>

      <h2>装備仕様</h2>
    </div>
    <div class="car-main-area-info">
    </div>
  </div>
</div>